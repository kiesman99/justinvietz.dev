---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, BASE } from "../consts";
import ThemeSwitcher from "./ThemeSwitcher";
---

<header
  class="container mx-auto px-5 mt-5 flex flex-col md:flex-row md:items-center md:gap-10"
>
  <h2 class="text-2xl dark:text-white">
    {SITE_TITLE}
  </h2>
  <nav class="flex flex-row gap-3">
    <HeaderLink href={`${BASE}/`}>Home</HeaderLink>
    <HeaderLink href={`${BASE}/blog`}>Blog</HeaderLink>
    <HeaderLink href="https://twitter.com/kiesman99" target="_blank">
      Twitter
    </HeaderLink>
    <HeaderLink href="https://github.com/kiesman99" target="_blank">
      GitHub
    </HeaderLink>
    <ThemeSwitcher client:only="react"/>
  </nav>
</header>
